{
  "name": "@scitizen/eslint-config",
  "version": "1.1.1",
  "description": "ESLint rules & presets for Scitizen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Scitizen/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/Scitizen/eslint-config/issues"
  },
  "homepage": "https://github.com/Scitizen/eslint-config#readme",
  "author": "GerkinDev",
  "keywords": [
    "eslint"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "npm run build -- --watch",
    "format:pkg": "format-package --write",
    "lint": "eslint --config .eslintrc.js '{,src/**/}*.{js,ts}'",
    "lint:commit-message:current": "commitlint -E HUSKY_GIT_PARAMS",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "rm -rf dist && npm run build",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run lint:commit-message:current",
      "pre-commit": "npm run lint && npm run build && npm run lint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "exports": {
    "./": "./dist/config/",
    "./fragments": "./dist/config-fragments/"
  },
  "peerDependenciesMeta": {
    "@angular-eslint/builder": {
      "optional": true
    },
    "@angular-eslint/eslint-plugin": {
      "optional": true
    },
    "@angular-eslint/eslint-plugin-template": {
      "optional": true
    },
    "@angular-eslint/schematics": {
      "optional": true
    },
    "@angular-eslint/template-parser": {
      "optional": true
    },
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/eslint-plugin-tslint": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    }
  },
  "peerDependencies": {
    "@angular-eslint/builder": "^1.0.0",
    "@angular-eslint/eslint-plugin": "^1.0.0",
    "@angular-eslint/eslint-plugin-template": "^1.0.0",
    "@angular-eslint/schematics": "^1.0.0",
    "@angular-eslint/template-parser": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.0.0",
    "@typescript-eslint/parser": "4.0.0",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsdoc": "^30.0.0",
    "eslint-plugin-prefer-arrow": "^1.0.0",
    "eslint-plugin-sort-export-all": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/eslint": "^7.2.6",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.13",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-sort-export-all": "^1.1.1",
    "format-package": "^6.1.0",
    "husky": "^4.3.6",
    "standard-version": "^9.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
