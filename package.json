{
  "name": "@scitizen/eslint-config",
  "version": "1.0.3",
  "description": "ESLint rules & presets for Scitizen",
  "scripts": {
    "lint": "eslint --config .eslintrc.js '{,src/**/}*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc -p tsconfig.json",
    "build:watch": "npm run build -- --watch",
    "lint:commit-message:current": "commitlint -E HUSKY_GIT_PARAMS",
    "prepare": "rm -rf dist && npm run build",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Scitizen/eslint.git"
  },
  "keywords": [
    "eslint"
  ],
  "author": "GerkinDev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Scitizen/eslint/issues"
  },
  "homepage": "https://github.com/Scitizen/eslint#readme",
  "exports": {
    "./": "./dist/config/",
    "./fragments": "./dist/config-fragments/"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/eslint": "^7.2.6",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "eslint": "^7.17.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.13",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "husky": "^4.3.6",
    "lodash": "^4.17.20",
    "standard-version": "^9.1.0",
    "tslint": "^6.1.3",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsdoc": "^30.0.0",
    "eslint-plugin-prefer-arrow": "^1.0.0",
    "lodash": "^4.0.0"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.0.0",
    "@typescript-eslint/parser": "4.0.0",
    "tslint-eslint-rules": "^5.0.0",
    "tslint": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run lint:commit-message:current",
      "pre-commit": "npm run lint && npm run build && npm run lint"
    }
  }
}
